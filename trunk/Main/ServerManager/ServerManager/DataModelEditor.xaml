<UserControl
	x:Uid="UserControl_1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UtnEmall.ServerManager="clr-namespace:UtnEmall.ServerManager"
    x:Class="UtnEmall.ServerManager.DataModelEditor"
	Width="640" Height="480">

	<Grid x:Uid="Grid_1">
		<Label x:Uid="Label_1" HorizontalAlignment="Left" Margin="8,8,0,0" VerticalAlignment="Top" Width="292" Height="37" Content="{x:Static UtnEmall.ServerManager:UIResources.AddDataModel}" FontSize="20"/>
		<Button x:Uid="bOK" Margin="0,0,121,8" VerticalAlignment="Bottom" Height="30" Content="{x:Static UtnEmall.ServerManager:UIResources.OK}" x:Name="bOK" HorizontalAlignment="Right" Width="100" Click="OnOkClicked"/>
		<Button x:Uid="bCancel" Margin="0,0,8,8" VerticalAlignment="Bottom" Height="30" Content="{x:Static UtnEmall.ServerManager:UIResources.Cancel}" x:Name="bCancel" HorizontalAlignment="Right" Width="100" Click="OnCancelClicked"/>
		<UniformGrid x:Uid="UniformGrid_1" Margin="8,49,0,0" Columns="2" Rows="1" VerticalAlignment="Top" Height="36" HorizontalAlignment="Left">
			<Label x:Uid="Label_2" Width="154" Content="{x:Static UtnEmall.ServerManager:UIResources.Store}" FontSize="16" Foreground="#FF444444" Height="35"/>
			<ComboBox x:Uid="stores" IsSynchronizedWithCurrentItem="True" Height="25" Width="175" x:Name="stores"/>
		</UniformGrid>
	</Grid>
</UserControl>